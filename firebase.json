{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "DEPLOY.md",
      "README.md",
      "MULTI-DOMAIN-SETUP.md",
      "SETUP-COMPARISON.md",
      "DESLOPPIFY-VALIDATION-REPORT.md",
      "assistant-prompt.md",
      "data/**"
    ],
    "headers": [
      {
        "source": "**/*.@(html|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": []
  }
}


